{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "V300 Vajra Evidence (schema_id: evidence.v300.vajra.v1)",
  "type": "object",
  "required": ["schema_id", "timestamp_utc", "compression_results"],
  "properties": {
    "schema_id": { "type": "string", "const": "evidence.v300.vajra.v1" },
    "timestamp_utc": { "type": "string", "format": "date-time" },
    "env": { "type": "object" },
    "compression_results": {
      "type": "object",
      "required": ["method", "compression_ratio", "cosine_similarity"],
      "properties": {
        "method": { "type": "string" },
        "compression_ratio": { "type": "number" },
        "cosine_similarity": { "type": "number" }
      }
    }
  }
}